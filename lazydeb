release_packages() {
    local distro="$(lsb_release --id --short)"
    local codename="$(lsb_release --codename --short)"

    case "$distro" in
	Debian|Ubuntu)
	    ansible-playbook -i "$ANSIBLE/hosts" "$ANSIBLE/apt.yml" \
			     --extra-vars "ansible_become_pass=\"$PASS\""
	    ansible-playbook -i "$ANSIBLE/hosts" "$ANSIBLE/$codename.yml" \
			     --extra-vars "ansible_become_pass=\"$PASS\""
	    ;;
	*)
	    echo "$distro not supported."
	    ;;
    esac
}

hardware_packages() {
    local make="$(cat /sys/class/dmi/id/chassis_vendor)"
    local model="$(cat /sys/class/dmi/id/product_family)"
    local codename="$(lsb_release --codename --short)"

    case "$make" in
	"Apple Inc.")
	    case "$model" in
		MacBook*)
		    ansible-playbook -i "$ANSIBLE/hosts" "$ANSIBLE/$codename-mbp.yml" \
				     --extra-vars "ansible_become_pass=\"$PASS\""
		    ;;
	    esac
	    ;;
	"Lenovo Inc.")
	    case "$model" in
		ThinkPad*)
		    ansible-playbook -i "$ANSIBLE/hosts" "$ANSIBLE/$codename-tp.yml" \
				     --extra-vars "ansible_become_pass=\"$PASS\""
		    ;;
	    esac
	    ;;
    esac
}

main() {
    command -v ansible &> /dev/null || install_ansible
    read -resp "Enter sudo password: " PASS
    release_packages
    hardware_packages
    ansible-playbook -i "$ANSIBLE/hosts" "$ANSIBLE/agnostic.yml" && \
	export PATH="${HOME}/conda/bin:$PATH"
}

main "$@"
